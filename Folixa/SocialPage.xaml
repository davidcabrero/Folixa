<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Folixa.SocialPage">
    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Subir foto" Command="{Binding SubirFotoCommand}" />
            <CollectionView ItemsSource="{Binding Fotos}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Image Source="{Binding FotoUrl}" HeightRequest="200" />
                                <Label Text="{Binding Usuario}" FontSize="Small" />
                                <Label Text="{Binding Comentario}" FontSize="Medium" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>